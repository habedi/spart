# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
max_line_length = 100

[*.md]
max_line_length = 150
trim_trailing_whitespace = false

[*.sh]
indent_size = 2

[*.{yaml,yml,json}]
indent_size = 2

[*.{py,pyi}]
max_line_length = 100
